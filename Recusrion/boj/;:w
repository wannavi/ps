N = int(input())


path = []


def hannoi(n, a, b, r):
    """
    n개를 위치 a에서 b로 옮길 때 과정 출력, r은 나머지 위치
    횟수 반환
    """
    if n == 1:
        path.append((a, b))
        return 1

    return hannoi(n-1, a, r, b) + hannoi(1, a, b, r) + hannoi(n-1, r, b, a)


print(hannoi(N, 1, 3, 2))
for a, b in path:
    print(a, b)
